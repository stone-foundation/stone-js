{
  "name": "@stone-js/create",
  "version": "0.0.0",
  "description": "create-stone is a tool to quickly start a Stone's project from a basic template",
  "author": "Mr. Stone <evensstone@gmail.com>",
  "license": "MIT",
  "repository": "git@github.com:stonemjs/create-stone.git",
  "homepage": "https://github.com/stonemjs/create-stone#readme",
  "bugs": {
    "url": "https://github.com/stonemjs/create-stone/issues"
  },
  "keywords": [
    "Stone.js",
    "Starter",
    "Templates",
    "Initializer",
    "Scaffolding"
  ],
  "files": [
    "bin"
  ],
  "bin": {
    "create-stone": "bin/create-stone.mjs"
  },
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "test": "vitest run",
    "test:cvg": "npm run test -- --coverage",
    "test:text": "npm run test:cvg -- --coverage.reporter=text",
    "test:html": "npm run test:cvg -- --coverage.reporter=html",
    "test:clover": "npm run test:cvg -- --coverage.reporter=clover",
    "prepare": "husky"
  },
  "dependencies": {
    "cross-spawn": "^7.0.6",
    "@stone-js/cli": "^0.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@vitest/coverage-v8": "^3.2.3",
    "husky": "^9.1.7",
    "vitest": "^3.2.3"
  }
}
